<odoo>
    <record id="group_saas_partner_portal" model="res.groups">
        <field name="name">SaaS Partner Portal</field>
        <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
    </record>
    <record id="group_saas_channel_manager" model="res.groups">
        <field name="name">Channel Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Record Rules for portal -->
    <record id="saas_tenant_portal_rule" model="ir.rule">
        <field name="name">Tenant portal access</field>
        <field name="model_id" ref="model_saas_tenant"/>
        <field name="groups" eval="[(4, ref('saas_partner_channel.group_saas_partner_portal'))]"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
    </record>
    <record id="saas_deal_portal_rule" model="ir.rule">
        <field name="name">Deal portal access</field>
        <field name="model_id" ref="model_saas_deal"/>
        <field name="groups" eval="[(4, ref('saas_partner_channel.group_saas_partner_portal'))]"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
    </record>
    <record id="saas_commission_portal_rule" model="ir.rule">
        <field name="name">Commission portal access</field>
        <field name="model_id" ref="model_saas_commission_ledger"/>
        <field name="groups" eval="[(4, ref('saas_partner_channel.group_saas_partner_portal'))]"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
    </record>
    <record id="saas_payout_item_portal_rule" model="ir.rule">
        <field name="name">Payout item portal access</field>
        <field name="model_id" ref="model_saas_payout_item"/>
        <field name="groups" eval="[(4, ref('saas_partner_channel.group_saas_partner_portal'))]"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
    </record>
</odoo>
