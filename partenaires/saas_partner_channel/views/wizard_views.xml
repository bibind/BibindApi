<odoo>
    <record id="view_payout_run_wizard" model="ir.ui.view">
        <field name="name">saas.payout.run.wizard</field>
        <field name="model">saas.payout.run.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Payout">
                <group>
                    <field name="period_start"/>
                    <field name="period_end"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
