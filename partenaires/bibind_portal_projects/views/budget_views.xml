<odoo>
    <data>
        <record id="view_project_budget_form" model="ir.ui.view">
            <field name="name">kb.project.budget.form</field>
            <field name="model">kb.project.budget</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="project_id"/>
                            <field name="labor_rate_eur_hour"/>
                            <field name="infra_monthly_cap"/>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
