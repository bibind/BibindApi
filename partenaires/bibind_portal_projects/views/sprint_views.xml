<odoo>
    <data>
        <record id="view_sprint_tree_portal" model="ir.ui.view">
            <field name="name">kb.sprint.tree.portal</field>
            <field name="model">kb.sprint</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <field name="velocity"/>
                </tree>
            </field>
        </record>

        <record id="view_sprint_form_portal" model="ir.ui.view">
            <field name="name">kb.sprint.form.portal</field>
            <field name="model">kb.sprint</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="goal"/>
                            <field name="state"/>
                            <field name="capacity_hours"/>
                            <field name="velocity" readonly="1"/>
                        </group>
                    </sheet>
                    <aside class="o_studio_ai_sidebar">
                        <div class="o_ai_chat">
                            <field name="goal" readonly="1"/>
                        </div>
                    </aside>
                </form>
            </field>
        </record>
    </data>
</odoo>
