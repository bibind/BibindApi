<odoo>
    <templates xml:space="preserve">
        <t t-name="kb.SprintBoard">
            <div class="o_ai_studio_panel"/>
            <div class="o_kb_sprint_board"/>
        </t>
    </templates>

    <data>
        <!-- Sprint board using the generic sprint QWeb template -->
        <record id="view_task_sprint_board" model="ir.ui.view">
            <field name="name">kb.project.task.sprint.board</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <kanban class="o_kb_sprint_kanban" create="false">
                    <field name="name" invisible="1"/>
                    <templates>
                        <t t-name="kanban-box">
                            <t t-call="kb.SprintBoard"/>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_task_sprint_board" model="ir.actions.act_window">
            <field name="name">Sprint Board</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_task_sprint_board"/>
            <field name="context">{}</field>
        </record>
        
        <record id="view_sprint_tree_portal" model="ir.ui.view">
            <field name="name">kb.sprint.tree.portal</field>
            <field name="model">kb.sprint</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <field name="velocity"/>
                </tree>
            </field>
        </record>

        <record id="view_sprint_form_portal" model="ir.ui.view">
            <field name="name">kb.sprint.form.portal</field>
            <field name="model">kb.sprint</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="goal"/>
                            <field name="state"/>
                            <field name="capacity_hours"/>
                            <field name="velocity" readonly="1"/>
                        </group>
                    </sheet>
                    <aside class="o_studio_ai_sidebar">
                        <div class="o_ai_chat">
                            <field name="goal" readonly="1"/>
                        </div>
                    </aside>
                </form>
            </field>
        </record>
        
    </data>
</odoo>

