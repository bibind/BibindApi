<odoo>
    <data>
        <record id="view_form_product_training" model="ir.ui.view">
            <field name="name">product.training.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']" position="after">
                    <group string="Training">
                        <field name="is_training"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
