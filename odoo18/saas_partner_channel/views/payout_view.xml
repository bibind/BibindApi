<odoo>
    <record id="view_saas_payout_run_tree" model="ir.ui.view">
        <field name="name">saas.payout.run.tree</field>
        <field name="model">saas.payout.run</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_saas_payout_run_form" model="ir.ui.view">
        <field name="name">saas.payout.run.form</field>
        <field name="model">saas.payout.run</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="period_start"/>
                        <field name="period_end"/>
                        <field name="executed_at"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Items">
                            <field name="item_ids">
                                <tree editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
