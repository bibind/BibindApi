<odoo>
    <record id="saas_rule_deal_portal" model="ir.rule">
        <field name="name">Deal portal own</field>
        <field name="model_id" ref="model_saas_deal"/>
        <field name="groups" eval="[(4, ref('saas_group_partner_portal'))]"/>
        <field name="domain_force">['|',('partner_id','=',user.partner_id.id),('partner_id','=',False)]</field>
    </record>
    <record id="saas_rule_tenant_portal" model="ir.rule">
        <field name="name">Tenant portal own</field>
        <field name="model_id" ref="model_saas_tenant"/>
        <field name="groups" eval="[(4, ref('saas_group_partner_portal'))]"/>
        <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
    </record>
    <record id="saas_rule_commission_portal" model="ir.rule">
        <field name="name">Commission portal own</field>
        <field name="model_id" ref="model_saas_commission_ledger"/>
        <field name="groups" eval="[(4, ref('saas_group_partner_portal'))]"/>
        <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
    </record>
    <record id="saas_rule_payout_item_portal" model="ir.rule">
        <field name="name">Payout item portal own</field>
        <field name="model_id" ref="model_saas_payout_item"/>
        <field name="groups" eval="[(4, ref('saas_group_partner_portal'))]"/>
        <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
    </record>
</odoo>
