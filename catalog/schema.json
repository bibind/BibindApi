{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "charts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "source": {"type": "string"},
          "versions": {"type": "array", "items": {"type": "string"}},
          "defaults": {"type": "object"},
          "values_schema": {
            "type": "object",
            "properties": {
              "allowed_keys": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        },
        "required": ["name", "versions"]
      }
    }
  },
  "required": ["charts"]
}
